<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="movies.view_product_form" model="ir.ui.view">
        <field name="name">movies.view.product.form</field>
        <field name="model">movies.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="price_uni"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="movies.action_movies_product" model="ir.actions.act_window">
        <field name="name">Producto</field>
        <field name="res_model">movies.product</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>